#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {

    int n,r,c;
    scanf("%d",&n);
    for(r=1;r<=n;r++){
        for(c=1;c<=r;c++){
            if(c==1||c==r||r==n)
            printf("* ");
            else{
                printf("  ");
            }
        }
        printf("\n");
    } 
    return 0;
}
